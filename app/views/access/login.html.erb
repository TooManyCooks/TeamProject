<% @page_title = "Doctor Login" %>

<div class="login">
<%= flash[:notice]%>

  <%= form_tag(:action => 'attempt_login') do %>
  <table>
    <tr>
      <td><%= label_tag(:name) %></td>
      <td><%= text_field_tag(:name) %></td>
    </tr>
    <tr>
      <td><%= label_tag(:password) %></td>
      <td><%= password_field_tag(:password) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Log In") %></td>
    </tr>
    <tr>
    <td>
  
    </td>
    </tr>
  </table>

  <%# link to doctors creation page#%>
  <%= link_to("Register new Doctor", {:controller => 'doctors', :action => 'new'} ) %>

  
  
     <% end %>
</div>