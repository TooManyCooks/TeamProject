<% content_for :title, "Doctor WorkStation" %>

<% content_for :sideCol do %>
  <p id="notice"><%= notice %></p>
  <div>
    <%= image_tag("defaultImg.png", class:"defaultImg") %>
    <h2>Name: <%= @doctor.name %> </h2>
    <%= link_to 'Edit', edit_doctor_path(@doctor) %>
  </div>
  <%= link_to('Log Out', {:controller => 'access', :action => 'logout'}, class: "btn btn-white", style: "text-align: center; margin: 0 60px;") %>
  <br>
  <h3>Patients:</h3>
    <table class="auto">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @doctor.patients.each do |patient| %>
        <tr>
          <td><%= patient.name %></td>
          <td><%= link_to image_tag("open.png", title:"Open"), patient_path(:doctor_id => @doctor.id) %></td>
          <td><%= link_to image_tag("edit.png", title:"Edit"), edit_patient_path(patient) %></td>
          <td><%= link_to image_tag("bin.png", title:"Delete"), patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Create Patient', new_patient_path(:doctor_id => @doctor.id) %>
  <% end %>


<% content_for :mainCol do %>
	<div id="center_box">
    <%= link_to 'Create Form', rapidfire_path %>
    <br>
  </div>
<% end %>
