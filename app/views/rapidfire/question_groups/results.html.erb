<% content_for :title, "Results" %>

<% content_for :sideCol do %>
  <p id="notice"><%= notice %></p>
<% end %>


<% content_for :mainCol do %>
  <%- @question_group_results.each do |result| %>
    <div id="center_box">
      <h4><%= result.question.question_text %></h4>
      <%- if result.results.is_a?(Array) %>
        <ol id="question_box" style="padding:0; width:18em;">
          <%- result.results.each do |answer| %>
            <li><%= answer %></li>
          <% end %>
        </ol>
      <% elsif result.results.is_a?(Hash) %>
        <table id="question_box" style="width:18em;">
          <thead>
            <tr>
              <th>Option</th>
              <th>Count</th>
            </tr>
          </thead>
          <tbody>
            <%- result.results.each do |option, count| %>
              <tr>
                <td><%= option %></td>
                <td><%= count %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  <% end %>
<% end %>
