<% content_for :title, "Edit Answers" %>

<div id="sideCol">
  <p id="notice"><%= notice %></p>
</div>

<div id="mainCol">
  <div class="animated fadeInDown">
  	<div id="intro_box">
      <%= image_tag("logo.png", class:"logo") %>
      <h2><%= yield(:title) %></h2>
    </div>
	  <div id="center_box">
      <%= render partial: 'form',
      locals: { form: @question_form,
      url: question_group_question_path(@question_group, @question),
      method: :put,
      submit_text: 'Update Question' } %>
    </div>
  </div>
</div>
